<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/msgLayout"
    android:layout_margin="3dp"
    >
    <!--    sendMsg-->
    <TextView
        android:id="@+id/sendMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textColor="#5099E4"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/messagesendback"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />
    <!--    getMsg-->
    <TextView
        android:visibility="gone"
        android:id="@+id/getMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textColor="#5099E4"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/messagesendbackget"
        app:layout_constraintStart_toStartOf="parent"
        />
    <!--    sendImage-->
    <ImageView
        android:visibility="gone"
        android:id="@+id/sendimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:textColor="#5099E4"
        android:src="@drawable/logochat"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/flsendImg"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/sendrecprogress"
                android:indeterminateDrawable="@drawable/custom_progress_bar"
                />

        </LinearLayout>
    </FrameLayout>
    <!--    getImage-->
    <ImageView
        android:visibility="gone"
        android:id="@+id/getImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logochat"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flgetImg"
        android:visibility="gone"

        >
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/recprogress"
                android:indeterminateDrawable="@drawable/custom_progress_bar"
                />

        </LinearLayout>
    </FrameLayout>
    <!--    sentContact-->
    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/sentContactView"
        android:background="@drawable/messagesendback"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaushik"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:id="@+id/msName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6351478024"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:id="@+id/msNumber"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
        </LinearLayout>



    </LinearLayout>
    <!--    getContact-->
    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/getContactView"
        android:background="@drawable/messagesendbackget"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaushik"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:id="@+id/mgName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6351478024"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:id="@+id/mgNumber"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
        </LinearLayout>

    </LinearLayout>
    <!--    getPDF-->
    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/getPdfView"
        android:background="@drawable/messagesendbackget"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pdf"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaushik"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/getpdfName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
    </LinearLayout>
    <!--    sendPDF-->
    <LinearLayout
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/sentPdfView"
        android:background="@drawable/messagesendback"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="50dp"

        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pdf"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaushik"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:id="@+id/sendpdfName"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />





    </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>