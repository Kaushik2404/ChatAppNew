<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AddGroupActivity"
    android:orientation="vertical">

    <include layout="@layout/header_add_group"
        android:id="@+id/header_group"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/all_user_item_view"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/txview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Follow The User.."
            android:textColor="#8A000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/add_group_btn"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/baseline_add_circle_24"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/_20sdp"
            />
    </FrameLayout>






</LinearLayout>